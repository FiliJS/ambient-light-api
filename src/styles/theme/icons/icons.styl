@import "../../helpers/variables-icons"

@font-face
  font-family 'fili'
  src url(icomoon-font-path + '/fili.ttf?emgipr') format('truetype'), url(icomoon-font-path + '/fili.woff?emgipr') format('woff'), url(icomoon-font-path + '/fili.svg?emgipr#fili') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'fili' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-github
  &:before
    content icon-github
.icon-instagram
  &:before
    content icon-instagram

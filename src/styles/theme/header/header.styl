.header
    background-color $color-white
    box-shadow 0 1px 3px $color-dark
    padding 0.5rem 0.8rem

.header__menu
    display inline-block
    margin-right 0.5rem
    width 1.6rem
    box-sizing border-box

    .header__icon
        color $color-dark
        font-size 1.6rem

.header__title
    display inline-block
    width calc(100% - (1.6rem + 0.5rem))
    box-sizing border-box
    text-align right

    .header__text
        color $color-blue
        font-size 1.7rem
        margin 0
